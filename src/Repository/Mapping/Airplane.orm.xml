<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Entity\Airplane" table="airplane">
<!--        <unique-constraints>-->
<!--            <unique-constraint columns="id_airplane"/>-->
<!--        </unique-constraints>-->

        <id name="primaryKey" type="integer">
            <generator/>
        </id>

        <embedded name="id" class="App\Entity\AirplaneId"/>

<!--        <embedded name="runOutRotor" class="FlightInformationRunOutRotor"/>-->

        <many-to-many field="flightInformation" target-entity="App\Entity\FlightInformation">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-table name="flight_information_airplane">
                <join-columns>
                    <join-column name="airplane" referenced-column-name="primary_key" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="flight_information" referenced-column-name="primary_key" unique="true" on-delete="CASCADE"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>
</doctrine-mapping>