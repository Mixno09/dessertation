<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Module\Dessertation\Domain\FlightInformation\FlightInformation" table="test">
        <unique-constraints>
            <unique-constraint columns="id_airplane,id_date,id_departure"/>
        </unique-constraints>

        <id name="primaryKey" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <embedded name="id" class="App\Module\Dessertation\Domain\FlightInformation\FlightInformationId"/>

        <one-to-many field="points" target-entity="App\Module\Dessertation\Domain\FlightInformation\FlightInformationDataPoint" mapped-by="primaryKey" />
    </entity>
</doctrine-mapping>