{% extends 'base.html.twig' %}

{% block title %}Оперативный контроль{% endblock %}

{% block body %}
    <canvas class="my-4 w-100" id="myChart"></canvas>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('Chart.bundle.min.js', 'chartjs') }}"></script>
    <script>
        var ctx = document.getElementById('myChart');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: {{ count|json_encode|raw }},
                datasets: [{
                    label: 'Альфа руд до фильтра левого двигателя',
                    backgroundColor: '#0000ff',
                    borderColor: '#0000ff',
                    data: {{ alfa_rud_left|json_encode|raw }},
                    borderWidth: 1,
                    fill: false,
                    yAxisID: 'y-alfa-rud-left',
                }, {
                    label: 'Альфа руд после фильтра левого двигателя',
                    backgroundColor: '#ff0000',
                    borderColor: '#ff0000',
                    data: {{ filter_alfa_rud_left|json_encode|raw }},
                    borderWidth: 1,
                    fill: false,
                    yAxisID: 'y-filter-alfa-rud-left',
                }, {
                    label: 'Альфа руд до фильтра правого двигателя',
                    backgroundColor: '#00ff00',
                    borderColor: '#00ff00',
                    data: {{ alfa_rud_right|json_encode|raw }},
                    borderWidth: 1,
                    fill: false,
                    yAxisID: 'y-alfa-rud-right',
                }, {
                    label: 'Альфа руд после фильтра правого двигателя',
                    backgroundColor: '#000000',
                    borderColor: '#000000',
                    data: {{ filter_alfa_rud_right|json_encode|raw }},
                    borderWidth: 1,
                    fill: false,
                    yAxisID: 'y-filter-alfa-rud-right',
                }]
            },
            options: {
                elements: {
                    point: {
                        radius: 0
                    }
                },
                title: {
                    display: true,
                    text: 'Выбег роторов РНД и РВД'
                },
                tooltips: {
                    mode: 'index',
                    intersect: false,
                },
                hover: {
                    mode: 'nearest',
                    intersect: true
                },
                scales: {
                    xAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Номер вылета'
                        }
                    }],
                    yAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Время выбега роторов левого двигателя'
                        },
                        id: 'y-alfa-rud-left',
                        ticks: {
                            min: -10,
                            max: 100,
                        }
                    }, {
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Аппроксимированное время выбега роторов левого двигателя'
                        },
                        id: 'y-filter-alfa-rud-left',
                        position: 'right',
                        ticks: {
                            min: -100,
                            max: 200,
                        }
                    }, {
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Аппроксимированное время выбега роторов левого двигателя'
                        },
                        id: 'y-alfa-rud-right',
                        position: 'right',
                        ticks: {
                            min: -200,
                            max: 300,
                        }
                    }, {
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Аппроксимированное время выбега роторов левого двигателя'
                        },
                        id: 'y-filter-alfa-rud-right',
                        position: 'right',
                        ticks: {
                            min: -300,
                            max: 400,
                        }
                    },]
                }
            }
        })
    </script>
{% endblock %}
