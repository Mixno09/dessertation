{% extends 'base.html.twig' %}

{% block title %}Оперативный контроль{% endblock %}

{% block body %}
<canvas class="my-4 w-100" id="myChart"></canvas>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('Chart.bundle.min.js', 'chartjs') }}"></script>
    <script>
        var ctx = document.getElementById('myChart');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: {{ labels|json_encode|raw }},
                datasets: [{
                    label: '{{ time_runout_rotor_rnd }}',
                    backgroundColor: '#0000ff',
                    borderColor: '#0000ff',
                    data: {{ runout_rnd|json_encode|raw }},
                    borderWidth: 1,
                    fill: false,
                    yAxisID: 'y-time-rnd',
                },{
                    label: '{{ time_runout_rotor_rvd }}',
                    backgroundColor: '#ff0000',
                    borderColor: '#ff0000',
                    data: {{ runout_rvd|json_encode|raw }},
                    borderWidth: 1,
                    fill: false,
                    yAxisID: 'y-time-rnd',
                },{
                    label: '{{ approximation_time_runout_rotor_rnd }}',
                    backgroundColor: '#00ff00',
                    borderColor: '#00ff00',
                    data: {{ approximation_runout_rnd|json_encode|raw }},
                    borderWidth: 1,
                    fill: false,
                    yAxisID: 'y-approximation-time-rnd',
                },{
                    label: '{{ approximation_time_runout_rotor_rvd }}',
                    backgroundColor: '#000000',
                    borderColor: '#000000',
                    data: {{ approximation_runout_rvd|json_encode|raw }},
                    borderWidth: 1,
                    fill: false,
                    yAxisID: 'y-approximation-time-rnd',
                }]
            },
            options: {
                elements: {
                    point: {
                        radius: 0
                    }
                },
                title: {
                    display: true,
                    text: 'Выбег роторов РНД и РВД'
                },
                tooltips: {
                    mode: 'index',
                    intersect: false,
                },
                hover: {
                    mode: 'nearest',
                    intersect: true
                },
                scales: {
                    xAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Номер вылета'
                        }
                    }],
                    yAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Время сек.'
                        },
                        id: 'y-time-rnd',
                        ticks: {
                            min: 0,
                            max: 50,
                        }
                    },{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Время сек.'
                        },
                        id: 'y-approximation-time-rnd',
                        position: 'right',
                        ticks: {
                            min: 0,
                            max: 100,
                        }
                    },]
                }
            }
        })
    </script>
{% endblock %}
