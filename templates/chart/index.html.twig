{% extends 'base.html.twig' %}

{% block title %}Hello ChartController!{% endblock %}

{% block body %}
    <canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('Chart.bundle.min.js', 'chartjs') }}"></script>
    <script>
        var ctx = document.getElementById('myChart');
        // eslint-disable-next-line no-unused-vars
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: {{ labels|json_encode|raw }},
                datasets: [{
                    label: 'Температура правого',
                    data: {{ t4Right|json_encode|raw }},
                    backgroundColor: 'transparent',
                    borderColor: '#0000ff',
                    borderWidth: 1,
                    pointBackgroundColor: '#0000ff'
                },{
                    label: 'Температура левого',
                    data: {{ t4Left|json_encode|raw }},
                    backgroundColor: 'transparent',
                    borderColor: '#ff0000',
                    borderWidth: 1,
                    pointBackgroundColor: '#ff0000'
                }]
            },
            options: {
                elements: {
                    point: {
                        radius: 0
                    }
                },
                title: {
                    display: true,
                    text: 'Температура двигателя'
                },
                tooltips: {
                    mode: 'index',
                    intercept: false,
                },
                scales: {
                    xAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Время, с'
                        }
                    }],
                    yAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Температура, Цельс'
                        }
                    }],
                }
            }
        })
    </script>
{% endblock %}
