{% extends 'base.html.twig' %}

{% block title %}Hello ChartController!{% endblock %}

{% block body %}
    <canvas class="my-4 w-100" id="myChart"></canvas>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('Chart.bundle.min.js', 'chartjs') }}"></script>
    <script>
        var ctx = document.getElementById('myChart');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: {{ labels|json_encode|raw }},
                datasets: [{
                    label: 'Температура правого',
                    backgroundColor: '#0000ff',
                    borderColor: '#0000ff',
                    data: {{ t4Right|json_encode|raw }},
                    borderWidth: 1,
                    fill: false
                }, {
                    label: 'Температура левого',
                    backgroundColor: '#ff0000',
                    borderColor: '#ff0000',
                    data: {{ t4Left|json_encode|raw }},
                    borderWidth: 1,
                    fill: false
                }]
            },
            options: {
                elements: {
                    point: {
                        radius: 0
                    }
                },
                title: {
                    display: true,
                    text: 'Температура двигателя'
                },
                tooltips: {
                    mode: 'index',
                    intersect: false,
                },
                hover: {
                    mode: 'nearest',
                    intersect: true
                },
                scales: {
                    xAxes: [{
                         display: true,
                         scaleLabel: {
                            display: true,
                            labelString: 'Время, с'
                         }
                    }],
                    yAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Температура, °C'
                        }
                    }]
                }
            }
        })
    </script>
{% endblock %}
