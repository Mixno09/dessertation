{% extends 'base.html.twig' %}

{% block title %}Dessertation{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('import') }}" class="btn btn-success mb-2">
                <span data-feather="plus"></span> Загрузить
            </a>
        </div>
        <div class="col-md-12">
            <table class="table table-bordered table-hover">
                <thead>
                <tr class="d-flex">
                    <th scope="col" class="col-md-2">Номер самолета</th>
                    <th scope="col" class="col-md-3">Дата вылета</th>
                    <th scope="col" class="col-md-2">Номер вылета</th>
                    <th scope="col" class="col-md-5">Действия</th>
                </tr>
                </thead>
                <tbody>
                {% for flightInformation in pagination %}
                    <tr class="d-flex">
                        <td class="col-md-2">{{ flightInformation.id.airplane }}</td>
                        <td class="col-md-3">{{ flightInformation.id.date|date("d-m-Y") }}</td>
                        <td class="col-md-2">{{ flightInformation.id.departure }}</td>
                        <td class="col-md-5">
                            <a href="" target="_blank"
                               class="btn btn-outline-primary text-nowrap">
                                <span data-feather="eye"></span> Просмотреть
                            </a>
                            <a href="{{ path('delete', {'id': departure.id}) }}"
                               class="btn btn-danger text-nowrap">
                                <span data-feather="x-square"></span> Удалить
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-auto">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}